<?xml version='1.0' encoding='utf-8'?>
<odoo>
    <data>
        <record id="res_config_settings_avancys_view_form" model="ir.ui.view">
            <field name="name">res.config.settings.avancys.view.form</field>
            <field name="model">res.config.settings</field>
            <field name="inherit_id" ref="account.res_config_settings_view_form" />
            <field name="arch" type="xml">
                <xpath expr="//div[@id='analytic']" position="after">
                    <h2>Pol√≠ticas de Contabilidad</h2>
                    <div class="row mt16 o_settings_container" name="account_policies">
                        <div class="col-12 col-lg-6 o_setting_box" name="account_policies_group_1">
                            <div class="o_setting_left_pane">
                                <field name="ciiu_ica"/>
                                <field name="city_cc"/>
                            </div>
                            <div class="o_setting_right_pane">
                                <label for="ciiu_ica"/>
                                <label for="city_cc"/>
                            </div>
                        </div>
                    </div>
                </xpath>
            </field>
        </record>
    </data>
</odoo>